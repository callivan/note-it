{
  "name": "note-it",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "eslint": "eslint . --ext ts,tsx --cache --report-unused-disable-directives --max-warnings 0",
    "eslint:fix": "eslint src/**/*.ts[x] --fix",
    "stylelint": "stylelint \"./src/**/*.scss\" --aei --cache",
    "stylelint:fix": "stylelint \"./src/**/*.scss\" --aei --fix",
    "prettier": "prettier --check ./src",
    "prettier:fix": "prettier --write ./src",
    "test": "jest --notify --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint && npm run stylelint && npm test"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.71.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.25",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-sonarjs": "^0.24.0",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-svg-transformer": "^1.0.0",
    "node-notifier": "^10.0.1",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-order": "^6.0.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "^5.1.4"
  },
  "resolve-path-alias": {
    "alias": {
      "@app/*": "src/01_app/*",
      "@pages/*": "src/02_pages/*",
      "@widgets/*": "src/03_widgets/*",
      "@features/*": "src/04_features/*",
      "@entities/*": "src/05_entities/*",
      "@shared/*": "src/06_shared/*"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
